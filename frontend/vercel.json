{
    "framework": "nextjs",
    "buildCommand": "npm run build",
    "installCommand": "npm install --legacy-peer-deps",
    "outputDirectory": ".next",
    "functions": {
        "app/api/auth/[...nextauth]/route.ts": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/analyze-repo",
            "destination": "https://nexus-fgqs.onrender.com/api/analyze-repo"
        },
        {
            "source": "/api/create-github-issue",
            "destination": "https://nexus-fgqs.onrender.com/api/create-github-issue"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ]
}