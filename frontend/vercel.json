{
    "framework": "nextjs",
    "buildCommand": "npm run build",
    "installCommand": "npm install --legacy-peer-deps",
    "outputDirectory": ".next",
    "functions": {
        "app/api/auth/[...nextauth]/route.ts": {
            "maxDuration": 30
        },
        "app/api/analyze-repo/route.ts": {
            "maxDuration": 60
        },
        "app/api/create-github-issue/route.ts": {
            "maxDuration": 30
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Robots-Tag",
                    "value": "noindex, nofollow, noarchive, nosnippet"
                }
            ]
        },
        {
            "source": "/_next/static/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/fonts/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/:path*.(png|jpg|jpeg|gif|svg|ico|webp)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=86400, must-revalidate"
                }
            ]
        }
    ]
}